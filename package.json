{
    "name": "chatbot-demo-next",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "xo 'src/**/*.{js,jsx,ts,tsx}'",
        "lint-fix": "xo 'src/**/*.{js,jsx,ts,tsx}' --fix",
        "pretty": "prettier 'src/**/*.{js,jsx,ts,tsx,css,scss,md}' --check",
        "pretty-fix": "prettier 'src/**/*.{js,jsx,ts,tsx,css,scss,md}' --write",
        "prepare": "husky install",
        "test": "vitest run",
        "nuke": "bash nuke.sh"
    },
    "dependencies": {
        "@langchain/core": "^0.1.56",
        "@langchain/openai": "^0.0.28",
        "bootstrap": "^5.3.3",
        "bootswatch": "^5.3.3",
        "langchain": "^0.1.32",
        "langsmith": "^0.1.14",
        "next": "14.1.4",
        "react": "^18",
        "react-bootstrap": "^2.10.2",
        "react-dom": "^18",
        "react-icons": "^5.0.1"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.2.1",
        "@commitlint/config-conventional": "^19.1.0",
        "@testing-library/react": "^15.0.0",
        "@types/node": "^20",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.19",
        "eslint-config-next": "14.1.4",
        "eslint-config-xo-nextjs": "^6.0.0",
        "husky": "^9.0.11",
        "jsdom": "^24.0.0",
        "lint-staged": "^15.2.2",
        "postcss": "^8",
        "prettier": "3.2.5",
        "tailwindcss": "^3.4.3",
        "typescript": "^5",
        "validate-branch-name": "^1.3.0",
        "vitest": "^1.4.0",
        "xo": "^0.58.0"
    },
    "lint-staged": {
        "src/**/*.{js,jsx,ts,tsx}": "npx xo",
        "src/**/*.{js,jsx,ts,tsx,css,scss,md}": "npx prettier --check"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "validate-branch-name": {
        "pattern": "^(main|dev){1}$|^(feat|fix|hotfix|release|chore)/.+$",
        "errorMsg": "INVALID BRANCH NAME: use format 'feature|fix|hotfix|release|core/your-branch-name'"
    }
}
