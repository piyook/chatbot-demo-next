{
    "name": "chatbot-demo-next",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "xo 'src/**/*.{js,jsx,ts,tsx}'",
        "lint-fix": "xo 'src/**/*.{js,jsx,ts,tsx}' --fix",
        "pretty": "prettier 'src/**/*.{js,jsx,ts,tsx,css,scss,md}' --check",
        "pretty-fix": "prettier 'src/**/*.{js,jsx,ts,tsx,css,scss,md}' --write",
        "prepare": "husky || true",
        "test": "vitest run",
        "nuke": "bash nuke.sh"
    },
    "dependencies": {
        "@langchain/core": "^0.2.31",
        "@langchain/openai": "^0.2.8",
        "bootstrap": "^5.3.3",
        "bootswatch": "^5.3.3",
        "langchain": "^0.2.17",
        "langsmith": "^0.1.48",
        "next": "14.2.7",
        "react": "^18",
        "react-bootstrap": "^2.10.4",
        "react-dom": "^18",
        "react-icons": "^5.3.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.4.1",
        "@commitlint/config-conventional": "^19.4.1",
        "@testing-library/react": "^16.0.1",
        "@types/node": "^22",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "@vitejs/plugin-react": "^4.3.1",
        "autoprefixer": "^10.4.20",
        "eslint-config-next": "14.2.7",
        "eslint-config-xo-nextjs": "^6.1.0",
        "husky": "^9.1.5",
        "jsdom": "^25.0.0",
        "lint-staged": "^15.2.9",
        "postcss": "^8",
        "prettier": "3.3.3",
        "tailwindcss": "^3.4.10",
        "typescript": "^5",
        "validate-branch-name": "^1.3.1",
        "vitest": "^2.0.5",
        "xo": "^0.59.3"
    },
    "lint-staged": {
        "src/**/*.{js,jsx,ts,tsx}": "npx xo",
        "src/**/*.{js,jsx,ts,tsx,css,scss,md}": "npx prettier --check"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "validate-branch-name": {
        "pattern": "^(main|dev){1}$|^(feat|fix|hotfix|release|chore)/.+$",
        "errorMsg": "INVALID BRANCH NAME: use format 'feature|fix|hotfix|release|core/your-branch-name'"
    }
}
